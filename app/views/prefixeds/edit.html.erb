<div class="app-form">
  <h2 class='text-center'>Editar Prefixado</h2>
  <p class='text-center w-75'><strong><%= @prefixed.short_name %></strong></p>

  <%= simple_form_for @prefixed do |f| %>
    <%= f.input :strategy, label: 'Estratégia', collection: Prefixed::STRATEGIES %>
    <%= f.input :buy_date, label: 'Data de entrada', html5: true %>
    <%= f.input :buy_quantity, label: 'Quantidade' %>
    <%= f.input :buy_price, label: 'Preço de entrada' %>
    <%= f.input :year_tax, label: 'Taxa Prefixada em %' %>
    <%= f.input :end_date, label: 'Data de encerramento', html5: true %>
    <%= f.input :advisor, collection: Stock::ADVISORS %>
    <div class="d-flex justify-content-center align-items-center w-100 mt-3">
      <%= link_to 'Voltar', portfolio_path(@prefixed.portfolio), class: 'btn btn-secondary btn-block w-50 m-0 mr-1' %>
      <%= f.submit 'Atualizar', class: 'btn btn-primary btn-block w-50 m-0 ml-1' %>
    </div>
  <% end %>

</div>