<div class="app-form">
  <h2 class='text-center'>Adicionar Produto</h2>
  <p class='text-center'><strong>Préfixado</strong></p>

  <%= simple_form_for [@portfolio, @prefixed] do |f| %>
    <div class="form-inputs">
      <%= f.input :short_name, label: 'Título' %>
      <%= f.input :description, label: 'Descrição' %>
      <%= f.input :buy_date, label: 'Data de entrada', html5: true, input_html: { min: '2010-01-01', max: DateTime.now} %>
      <%= f.input :buy_quantity, label: 'Quantidade' %>
      <%= f.input :buy_price, label: 'Preço de entrada' %>
      <%= f.input :end_date, label: 'Data de encerramento', html5: true %>
      <%= f.input :year_tax, label: 'Taxa Pré-fixada' %>
      <%= f.input :advisor, collection: Stock::ADVISORS %>
    </div>
    <div class="d-flex justify-content-center align-items-center w-100 mt-3">
      <%= link_to 'Voltar', portfolio_path(@portfolio), class: 'btn btn-secondary btn-block w-50 m-0 mr-1' %>
      <%= f.submit 'Adicionar', class: 'btn btn-primary btn-block w-50 m-0 ml-1' %>
    </div>
    <% end %>
</div>