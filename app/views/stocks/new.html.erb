<div class="app-form">
  <h2 class='text-center'>Detalhes da ação</h2>
  <p class='text-center'><strong><%= @symbol %></strong></p>

  <%= simple_form_for [@portfolio, @stock] do |f| %>
    <div class="form-inputs">
      <%= f.input :symbol, :as => :hidden  %>
      <%= f.input :short_name, :as => :hidden  %>
      <%= f.input :buy_date, label: 'Data de entrada' %>
      <%= f.input :buy_quantity, label: 'Quantidade' %>
      <%= f.input :buy_price, label: 'Preço de entrada' %>
      <%= f.input :advisor, collection: Stock::ADVISORS %>
    </div>
    <div class="d-flex justify-content-center align-items-center w-100 mt-3">
      <%= link_to 'Voltar', portfolio_path(@portfolio), class: 'btn btn-secondary btn-block w-50 m-0 mr-1' %>
      <%= f.submit 'Adicionar', class: 'btn btn-primary btn-block w-50 m-0 ml-1' %>
    </div>
    <% end %>
</div>
