<div class='container'>
	<h1 class='mb-2'>My Portfolios</h1>
	<%= link_to 'Add portfolio', new_portfolio_path, class: 'btn btn-primary btn-sm mb-3' %>
	<% if @portfolio && @portfolios.length > 0 %>
		<% @portfolios.each do |portfolio| %>
			<h3><%= link_to portfolio.name, portfolio_path(portfolio) %></h3>
		<% end %>
	<% else %>
		<p>(No portfolio added yet!)</p>
	<% end %>
</div>
