<div class="app-navbar mb-3">
  <%= link_to "#", class: "navbar-brand" do %>
    <i class="fas fa-wallet"></i><span> InvestApp</span>
  <% end %>

  <% if user_signed_in? %>
    <div class="nav-item dropdown app-sign">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else %>
        <%= image_tag 'default-user-image.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "Painel",  portfolios_path, class: "dropdown-item" %>
        <%= link_to "Atualizar conta",  edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  <% else %>
    <div class="nav-item">
      <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
    </div>
  <% end %>
  
</div>
